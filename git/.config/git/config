[core]
	abbrev = 9
	editor = vim
[alias]
	a = add
	b = branch --sort=-committerdate
	bm = branch --merged
	bnm = branch --no-merged
	c = commit --verbose
	ca = commit --verbose --amend
	can = commit --verbose --amend --no-edit
	co = checkout
	d = diff
	dn = diff --name-only
	ds = diff --staged
	du = count-objects --verbose --human-readable
	f = fetch
	h = help
	hc = help config
	l = log
	lo = log --pretty=oneline
	lof = log --pretty=fuller
	lol = log --graph --pretty=oneline
	m = merge
	nuke = !git clean -fdx && git submodule foreach git clean -fdx
	p = pull
	pm = fetch origin master:master
	ps = push
	psf = push --force-with-lease
	pr = pull-request
	r = reset
	rh = reset --hard
	ru = reset @{u}
	ruh = reset --hard @{u}
	rb = rebase
	s = status
	sh = show
	st = stash
	sub = submodule
	y = cherry-pick
[am]
	threeWay = true
[apply]
	ignoreWhitespace = change
[branch]
	autoSetupRebase = local
[color]
	ui = auto
[credential]
	helper = cache --timeout 30000 # seconds
[diff]
	tool = vimdiff
	mnemonicPrefix = true
[format]
	pretty = medium
[help]
	autoCorrect = -1
[log]
	abbrevCommit = true
	decorate = short
[merge]
	stat = true
	tool = vimdiff
[pull]
	ff = only
[push]
	default = current
[rebase]
	stat = true
	autoSquash = true
	autoStash = true
[rerere]
